{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "plugins": ["react", "react-hooks"],
  "extends": ["airbnb", "plugin:react-hooks/recommended"],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "quotes": ["error", "single"],
    "radix": "off", // This option param
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn", // Checks effect dependencies
    "no-alert": "off", // Necessary for web
    "no-console": "off", // Necessary for debug
    "no-param-reassign": "warn" // No problem when allow assignment to function parameters, but make sure it not impact to another feature!
  }
}
